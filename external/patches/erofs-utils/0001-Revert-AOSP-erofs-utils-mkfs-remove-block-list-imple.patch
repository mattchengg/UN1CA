+++ b/include/erofs/block_list.h
@@ -18,6 +18,26 @@ FILE *erofs_blocklist_close(void);
 
 void tarerofs_blocklist_write(erofs_blk_t blkaddr, erofs_blk_t nblocks,
 			      erofs_off_t srcoff, unsigned int zeroedlen);
+#ifdef WITH_ANDROID
